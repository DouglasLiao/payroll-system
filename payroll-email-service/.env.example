# Service Configuration
SERVICE_NAME=email-service
SERVICE_PORT=8001
DEBUG=True

# Database
DATABASE_URL=postgresql://postgres:postgres@db_email:5432/email_db

# Redis
REDIS_URL=redis://redis:6379/0

# Email Provider (SMTP for development, can switch to SendGrid later)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_gmail@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@payrollsystem.com
FROM_NAME=Payroll System

# SendGrid (uncomment when ready to use)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=SG.your_key_here

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:80"]

# JWT (should match backend)
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
